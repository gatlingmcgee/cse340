<%# unit 5 - Task 4, creating new "update account" view %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%# title %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<form class="formdetailsinventory" action ="/account/updateaccount" method="post">

    <label for="account_firstname">First Name</label>
    <input type="text" id="account_firstname" name="account_firstname" required value="<%= locals.account_firstname?locals.account_firstname:locals.accountData.account_firstname %>">

    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname?locals.account_lastname:locals.accountData.account_lastname %>">

    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email?locals.account_email:locals.accountData.account_email %>">

    <br>
    <button class="buttonU" type="submit">Update Information</button>

    <%# unit 5 - calls the primary key (account_id) %>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %> />
</form>

<br>
<br>

<h2>Update Password</h2>
<form class="formdetailsinventory" action ="/account/updatepassword" method="post">

    <p>Password must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
    <p>*note your original password will be changed*</p>

    <label for="account_password">Password</label>
    <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

    <br>
    <button class="buttonU" type="submit">Change Password</button>

    <%# unit 5 - calls the primary key (account_id) %>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %> />
</form>