<%# unit 5 - delete a vehicle view %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<form class="formdetailsinventory" action="/inv/delete" method="post">

    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly>

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" readonly>

    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>" readonly>    
    
    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" readonly>

    <p>*** Confirm Deletion - The delete is permanent! ***</p>

    <br>
    <button type="submit">Delete Vehicle</button>

    <%# unit 5 - calls the primary key (inv_id) %>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>

</form>